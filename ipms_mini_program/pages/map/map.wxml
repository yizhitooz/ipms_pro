<!-- pages/charge/map.wxml -->
<view class="container">
    <view class="map-container" style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh;">
        <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" show-location="true" style="width: 100%; height: 80%;">
            <!-- 显示用户当前位置 -->
            <marker longitude="{{longitude}}" latitude="{{latitude}}" label="我的位置" icon="/images/my_location.png"></marker>
            <!-- 显示车辆位置 -->
            <marker longitude="{{carLongitude}}" latitude="{{carLatitude}}" label="车辆位置" icon="/images/car_location.png"></marker>
        </map>
    </view>

    <view class="input-container">
        <input class="input" type="text" placeholder="请输入车牌号" bindinput="inputChange"  id="palteInput"/>
        <button class="btn" bindtap="search">查找</button>
    </view>

    <view class="nav-btn-container">
        <button class="nav-btn" bindtap="navigate" disabled="{{!canNavigate}}">导航至我的车辆</button>
        <button class="nav-btn">导航至出入口(观音山)</button>
        <button class="nav-btn">导航至出入口(南大门)</button>
    </view>
</view>