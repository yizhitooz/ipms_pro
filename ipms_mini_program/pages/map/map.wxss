/* pages/charge/map.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.map-container {
  width: 100%;
  height: 300px; /* 设置地图容器的高度 */
  margin-bottom: 10px;
}

.input-container {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-right: 10px;
}

.btn {
  height: 40px;
  line-height: 40px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 0 15px;
}

.nav-btn {
  height: 40px;
  line-height: 40px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 0 15px;
}
