.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #f0f0f0; /* 添加背景色 */
  }
  
  .map-container {
    width: 350px;
    height: 350px;
    margin-bottom: 10px;
    border-radius: 10px; /* 添加圆角 */
    overflow: hidden; /* 隐藏溢出的内容 */
    border: solid #0069d9 3px;
  }
  
  .input-container {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .input {
    flex: 1;
    height: 40px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-right: 10px;
  }
  
  .btn, .nav-btn {
    height: 40px;
    line-height: 40px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 20px; /* 增加圆角 */
    padding: 0 15px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); /* 添加阴影 */
    transition: all 0.3s ease 0s; /* 添加过渡效果 */
    margin-bottom: 10px;
  }
  
  .btn:hover, .nav-btn:hover {
    background-color: #0069d9;
    box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
    color: #fff;
    transform: translateY(-7px);
  }
  