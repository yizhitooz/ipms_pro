/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 20px;
}

.navbar {
  width: 100%;
  height: 60px;
  background-color: #007bff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-title {
  color: #fff;
  font-size: 20px;
}

.banner {
  margin-top: 20px;
  margin-bottom: 20px;
}

.banner-image {
  width: 100%;
  height: auto;
}

.parking-info {
  margin-bottom: 20px;
}

.parking-capacity {
  font-size: 16px;
  color: #333;
}

.refresh-button {
  padding: 8px 16px;
  font-size: 14px;
  color: #fff;
  background-color: #007bff;
  border: none;
  border-radius: 4px;
}

.buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20px;
}

.button {
  flex: 1;
  padding: 15px;
  font-size: 16px;
  color: #fff;
  background-color: #007bff;
  border: none;
  border-radius: 8px;
  text-align: center;
}
